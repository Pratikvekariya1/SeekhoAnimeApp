<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/animeListFragment">

    <fragment
        android:id="@+id/animeListFragment"
        android:name="com.seekho.animeapp.presentation.ui.fragment.AnimeListFragment"
        android:label="@string/top_anime"
        tools:layout="@layout/fragment_anime_list">
        <action
            android:id="@+id/action_list_to_detail"
            app:destination="@id/animeDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/animeDetailFragment"
        android:name="com.seekho.animeapp.presentation.ui.fragment.AnimeDetailFragment"
        android:label="@string/anime_details"
        tools:layout="@layout/fragment_anime_detail">
        <argument
            android:name="animeId"
            app:argType="integer" />
    </fragment>
</navigation>